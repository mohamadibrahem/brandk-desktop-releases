{
  "name": "brandk-online",
  "version": "1.0.0",
  "description": "Brandk Desktop App for Online Selling",
  "author": "brandk-online",
  "main": "dist-electron/main/main.js",
  "scripts": {
    "clean": "rimraf dist-electron dist",
    "build:main": "tsc -p tsconfig.main.json",
    "build:web": "vite build",
    "build:electron": "npm run clean && npm run build:main && vite build && electron-builder",
    "dev:web": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://127.0.0.1:3000 && npm run start:electron\"",
    "start:electron": "npm run build:main && electron ."
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.12.1",
    "bootstrap-vue-3": "^0.5.1",
    "escpos": "^3.0.0-alpha.6",
    "escpos-console": "^3.0.0-alpha.2",
    "escpos-usb": "^3.0.0-alpha.4",
    "idb": "^8.0.2",
    "pdfkit": "^0.17.1",
    "vue": "^3.5.13",
    "vue-qrcode-reader": "^5.7.2",
    "vue-router": "^4.5.1",
    "electron-updater": "^6.6.2",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "concurrently": "^8.2.2",
    "electron": "^24.0.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^5.0.5",
    "typescript": "^4.9.5",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.brandk.online",
    "productName": "BrandK Online",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/main/**/*"
    ],
    "extraResources": [
      {
        "from": "src/assets/fonts",
        "to": "assets/fonts",
        "filter": [
          "**/*.ttf"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "mohamadibrahem",
        "repo": "brandk-desktop-releases"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/img/logo_brandk_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": true
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/img/logo_brandk_icon.icns"
    }
  }
}
