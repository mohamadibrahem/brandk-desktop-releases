{
    "compilerOptions": {
      "target": "ES2020",             // مستوى JS الناتج
      "module": "CommonJS",           // Electron Main يعمل على CommonJS
      "outDir": "dist/main",          // مكان إخراج الملفات المترجمة
      "rootDir": "electron",          // مسار ملفات المصدر
      "esModuleInterop": true,
      "strict": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"                  // <-- هنا
      ],
    },
    "include": ["electron/**/*.ts","src/types/**/*.d.ts"]   // كل ملفات Electron/Main
  }
  